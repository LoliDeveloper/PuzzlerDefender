<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relHpBar"
                android:padding="0dp"
                android:paddingStart="0dp"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/solid_red">
                <ImageView
                    android:padding="2dp"
                    android:id="@+id/hpBarGreen"
                    android:background="@drawable/solid_green"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:padding="2dp"
                    android:id="@+id/hpBarRed"
                    android:background="@drawable/hp_bar"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/hpBarText2"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Loading..."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <ImageView
                android:src="@drawable/headDino"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_brain"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        <View
            android:layout_width="5dp"
            android:layout_height="5dp"/>
            <TextView
                android:id="@+id/brainPowerLevAct"
                android:textSize="18sp"
                android:text="Brain Power:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="30dp"/>
        <TextView
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="PUZZLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/easyButton"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="-1 HP"
            android:background="@drawable/damage1greenbutton"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/mediumButton"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="-2 HP"
            android:background="@drawable/damage2orangebutton"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/hardButton"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="-3 HP"
            android:background="@drawable/damage3redbutton"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#00ff00"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="easy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="10dp"/>
        <TextView
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Medium"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="10dp"/>
        <TextView
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="HARD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="LATER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_lock"
                android:layout_width="16sp"
                android:layout_height="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="LOCK"
            android:background="@drawable/laterbutton"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="10dp"/>
        <Button
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="LOCK"
            android:background="@drawable/laterbutton"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="10dp"/>
        <Button
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="LOCK"
            android:background="@drawable/laterbutton"
            android:layout_width="100dp"
            android:layout_height="70dp"/>
    </LinearLayout>
        <View
            android:layout_width="5dp"
            android:background="#ffffff"
            android:layout_height="50dp"/>
    <Button
        android:layout_gravity="center"
        android:textSize="30sp"
        android:text="BACK"
        android:background="@drawable/solid_button"
        android:id="@+id/backButtonLevels"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
</LinearLayout>